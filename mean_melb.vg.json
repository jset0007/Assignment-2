{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Mean property price per suburb (2016-2017)",
  "width": "container",
  "height": 500,
  "projection": {
    "type": "equirectangular",
    "center":   [145, -37.95],
    "scale": {"expr": "zoom_level"}
  },
  "params": [
    {
      "name": "zoom_level",
      "value": 30000,
      "bind": {
        "input": "range",
        "min": 18000,
        "max": 60000,
        "step": 100,
        "name": "Zoom: "
      }
    },

    {
      "name": "Price_range",
      "value": 0,
      "bind": {
      "input":"range",
      "min": 500000,
      "max": 5000000,
       "step": 100000,
       "name": "Budget Range: "
      }
    }

  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jset0007/Assignment-2/main/vic_localities.json",
        "format": {"type": "topojson", "feature": "vic_localities"}
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.LOC_NAME",
          "as": "note"
        }
        
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jset0007/Assignment-2/main/mean_melb.csv"
      },
      "transform": [
        {
          "lookup": "Suburb",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jset0007/Assignment-2/main/vic_localities.json",
              "format": {
                "type": "topojson",
                "feature": "vic_localities"
              }
            },
            "key": "properties.LOC_NAME"
          },
          "as": "geo"
        },
        {"filter":"datum.Mean < Price_range"}
      
      ],
      "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Mean",
          "type": "quantitative",
          "scale": {"domain": [400000, 4500000], "scheme": "blues"},
          "legend": {"format": ".2s"}
        },
        "tooltip": [
          {"field": "Suburb", "type": "nominal", "title": "Suburb"},
          {
            "field": "Mean",
            "type": "quantitative",
            "title": "Mean Price",
            "format": ".0f"
          }
         
        ]
      }
    }
  ],
  "config": {}
}