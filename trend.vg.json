{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/jset0007/Assignment-2/main/median_year.csv"},
    "width": 400,
    "height": 300,
    "encoding": {"x": {"field": "Sale Year", "type": "ordinal"}},
    "layer": [
      {
        "encoding": {
          "color": {"field": "Type", "type": "nominal"
          , 
            "scale":{
              "domain":[
                "House",
                "Apartment"
              ],
              "range":[
                "#4ebcff",
                "#945cb4"
                 ]
               }
               },
          "y": {"field": "Price", "type": "quantitative"}
        },
        "layer": [
          {"mark": "line"},
          {"transform": [{"filter": {"param": "hover", "empty": false}}], "mark": "point"}
        ]
      },
      {
        "transform": [{"pivot": "Type", "value": "Price", "groupby": ["Sale Year"]}],
        "mark": "rule",
        "encoding": {
          "opacity": {
            "condition": {"value": 0.3, "param": "hover", "empty": false},
            "value": 0
          },
          "tooltip": [
            {"field":"Sale Year", "type":"nominal", "title":"Year"},
            {"field":"House", "type":"quantitative"},
            {"field":"Apartment", "type":"quantitative"}
          ]
        },
        "params": [{
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Sale Year"],
            "nearest": true,
            "on": "mouseover",
            "clear": "mouseout"
          }
        }]
      }
    ]
  }
  